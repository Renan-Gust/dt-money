{
    "version": 2,
    "builds": [
      {
        "src": "src/api/server.ts",
        "use": "@vercel/node",
        "config": {
          "includeFiles": ["server.json"]
        }
      },
      {
        "src": "public/**/*",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "src/api/server.ts"
      },
      {
        "src": "/(.*)",
        "dest": "/index.html"
      }
    ]
  }